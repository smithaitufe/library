@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    
}

@if(!Model.RegistrationSuccessful) {
    <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12 offset-sm-0 col-md-6 offset-md-3">
                    <h3 class="register-form-title">Create Your Free Reader's Account</h3>
                    <div class="content-container shadowed">
                        <div class="content">
                            
                            <h6>First, tell us about yourself</h6>
                                <!--<div asp-validation-summary="All" class="text-danger"></div>-->
                                <div class="row form-group">
                                    <div class="col-sm-12 col-md-6">
                                        <label asp-for="LastName"></label>
                                        <input asp-for="LastName" class="form-control form-input-control"  placeholder="@Html.DisplayNameFor(model => model.LastName)" />
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                    <div class="col-sm-12 col-md-6">
                                        <label asp-for="FirstName"></label>
                                        <input asp-for="FirstName" class="form-control form-input-control"  placeholder="@Html.DisplayNameFor(model => model.FirstName)" />
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                        
                        </div>
                    </div>

                    <div class="content-container shadowed">
                        <div class="content">
                            <h6>Second, how do we contact you</h6>
                            <div class="row form-group">
                                <div class="col-sm-12 col-md-6">
                                    <label asp-for="PhoneNumber"></label>
                                    <input asp-for="PhoneNumber" class="form-control form-input-control"  placeholder="@Html.DisplayNameFor(model => model.PhoneNumber)"/>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-sm-12 col-md-9">
                                    <label asp-for="Line" class="form-control-label"></label>
                                    <input asp-for="Line" type="text" class="form-control form-input-control">
                                    <span asp-validation-for="Line" class="text-danger"></span>
                                </div>
                                <div class="col-sm-12 col-md-3">
                                    <label asp-for="City" class="form-control-label"></label>
                                    <input asp-for="City" type="text" class="form-control form-input-control">
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div> 
                            </div>
                            <div class="row form-group">                                           
                                <div class="col-sm-12 col-md-8">
                                    <label asp-for="StateId" class="form-control-label"></label>
                                    <select asp-for="StateId" asp-items="Model.States" class="form-control form-input-control">
                                        <option value="">Select State</option>
                                    </select>
                                    <span asp-validation-for="StateId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="content-container shadowed">
                        <div class="content">
                            <h6>Third, enter your secured password</h6>
                            <div class="row form-group">
                                <div class="col-sm-12 col-md-6">
                                    <label asp-for="Password"></label>      
                                    <input asp-for="Password" class="form-control form-input-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-sm-12 col-md-6">
                                    <label asp-for="ConfirmPassword"></label>        
                                    <input asp-for="ConfirmPassword" class="form-control form-input-control" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>        
                                </div>                
                            </div>
                        </div>
                    </div>
                    <div class="form-check">
                        <label asp-for="Agreed" class="form-check-label">
                            <input asp-for="Agreed" type="checkbox" class="form-check-input" />
                            <span style="padding-top: 0.5px; display: inline-block;">@Html.DisplayNameFor(model => model.Agreed)</span>
                        </label>
                    </div>        
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
}else{
    <div class="row">
        <div class="col-sm-12 col-md-6 offset-md-3">
            <div class="content-container shadowed">
                <div class="content">
                    <h3 class="text-success">Registration Successful</h3>
                    <p>A Reader's Account has been created for you.</p>
                    <p>You will be notified within <strong>48 hours</strong> the status of your account.</p>
                    <p>If your registration is approved, you will be given a Library No that you can use to login to your account along with the password you entered during the registration.</p>

                    
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
