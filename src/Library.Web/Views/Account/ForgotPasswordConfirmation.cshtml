@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="row">
    <div class="col-sm-6 mx-auto">
        <h2 class="account-section-header">@ViewData["Title"]</h2>
        <div class="account-section-content">
            <p>
            A code has been sent to your phone number.
        </p>
        <form asp-action="ResetPassword" asp-controller="Account" method="POST">
            <input type="hidden" asp-for="PhoneNumber">
            <div class="form-group">
                <label asp-for="Code"></label>
                <input asp-for="Code" type="text" class="form-control">
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="text" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="text" class="form-control">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Change Password</button>
        </form>
        </div>
        
    </div>
</div>