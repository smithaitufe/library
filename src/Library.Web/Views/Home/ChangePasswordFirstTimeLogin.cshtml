@model ChangePasswordFirstTimeLoginViewModel

<form asp-action="ChangePasswordFirstTimeLogin" asp-controller="Home" method="POST">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-5 mx-md-auto">

                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title mb-0">Change Password</h2>
                    </div>
                    <div class="card-block">      
                        <div class="form-group">
                            <input asp-for="UserName" type="hidden">
                            <input asp-for="OldPassword" type="hidden">
                            <input asp-for="Role" type="hidden">
                        </div>           
                        <div class="form-group">
                            <label asp-for="NewPassword" class="form-control-label"></label>
                            <input asp-for="NewPassword" type="password" class="form-control">
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-control-label"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>                
                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Change Password</button>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</form>
