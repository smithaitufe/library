@model ShelfListingViewModel

<div class="card">
    
        <div class="card-header py-1">            
            <h3 class="float-left">Shelves</h3>
            <a asp-action="Create" class="float-right btn btn-primary">Add Shelf</a>            
        </div>
    
    <div class="card-block">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.Shelves)
                {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Location.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Edit</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>