@model BookEditorViewModel
<form asp-action="Create" enctype="multipart/form-data" method="POST" class="container-fluid row">
    <div class="col-sm-12 col-md-3">
        <div class="card">
            <h3 class="card-header mx-0">Book Cover</h3>
            <div class="card-block">
                <label class="custom-file image-upload-control">
                    <input type="file" asp-for="Image" class="custom-file-input" onchange="Common.FileBrowsed(this,'#preview', null)">
                    <span class="custom-file-control">
                        <span id="fileName"></span>
                        <img src="@Url.Content("~/images/icons/book-icon.png")" alt="" id="preview">
                    </span>
                </label>
                <span asp-validation-for="Image" class="text-danger"></span>
                <span asp-validation-for="ImageExtension" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="col-sm-12 col-md-9 px-0 pl-1">
        <div class="row">
            <div class="col-sm-12 px-0 py-0 pr-2 mb-2">           
                <div class="card">
                    <h3 class="card-header mx-0">Basic Information</h3>
                    <div class="card-block">
                        <div class="row">
                            <div class="col-sm-12 col-md-6 form-group">
                                <label asp-for="CategoryId" class="mb-0"></label>        
                                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control">
                                    <option value="">Select Book Category</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div> 
                            <div class="col-sm-12 col-md-6 form-group">
                                <label asp-for="GenreId" class="mb-0"></label>
                                <select asp-for="GenreId" asp-items="Model.Genres" class="form-control">
                                        <option value="">Select Genre</option>
                                    </select>
                                <span asp-validation-for="GenreId" class="text-danger"></span>
                            </div>                          
                        </div>                
                        <div class="row">
                            <div class="col-sm-12 col-md-6 form-group">
                                <label asp-for="Title" class="mb-0"></label>        
                                <input asp-for="Title" type="text" class="form-control" placeholder="@Html.DisplayNameFor(f=>f.Title)">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="col-sm-12 col-md-6 form-group">
                                <label asp-for="SubTitle" class="mb-0"></label>        
                                <input asp-for="SubTitle" type="text" class="form-control" placeholder="@Html.DisplayNameFor(f=>f.SubTitle)">
                                <span asp-validation-for="SubTitle" class="text-danger"></span>        
                            </div>        
                        </div>

                        <div class="row">
                            <div class="col-sm-12 col-md-6 form-group">
                                <label asp-for="PublisherId" class="mb-0"></label>        
                                <select asp-for="PublisherId" asp-items="Model.Publishers" class="form-control">
                                    <option value="">Select a publisher</option>
                                </select>
                                <span asp-validation-for="PublisherId" class="text-danger"></span>
                            </div>
                            <div class="col-sm-12 col-md-6 form-group">
                                <label asp-for="SelectedAuthorIds" class="mb-0"></label>        
                                <select asp-for="SelectedAuthorIds" asp-items="Model.Authors" class="form-control" multiple="multiple" aria-multiline="false">
                                    <option value="">Select Author(s)</option>
                                </select>
                                <span asp-validation-for="SelectedAuthorIds" class="text-danger"></span>
                            </div>
                        </div> 
                    </div>
                </div>
            </div>
            <div class="col-sm-12 px-0 py-0 pr-2 mb-2">
                <div class="card">
                    <h3 class="card-header">Book Properties</h3>
                    <div class="card-block">
                        <div class="row">
                            <div class="col-sm-12 col-md-4 form-group">
                                <label asp-for="ShelfNo" class="mb-0"></label>        
                                <input asp-for="ShelfNo" type="text" class="form-control" placeholder="@Html.DisplayNameFor(f=>f.ShelfNo)">
                                <span asp-validation-for="ShelfNo" class="text-danger"></span>        
                            </div>
                            <div class="col-sm-12 col-md-4 form-group">
                                <label asp-for="Edition" class="mb-0"></label>        
                                <input asp-for="Edition" type="text" class="form-control" placeholder="@Html.DisplayNameFor(f=>f.Edition)">
                                <span asp-validation-for="Edition" class="text-danger"></span>        
                            </div>
                            <div class="col-sm-12 col-md-4 form-group">
                                <label asp-for="Volume" class="mb-0"></label>        
                                <input asp-for="Volume" type="text" class="form-control" placeholder="@Html.DisplayNameFor(f=>f.Volume)">
                                <span asp-validation-for="Volume" class="text-danger"></span>        
                            </div>
                            <div class="col-sm-12 col-md-4 form-group">
                                <label asp-for="ISBN" class="mb-0"></label>        
                                <input asp-for="ISBN" type="text" class="form-control" placeholder="@Html.DisplayNameFor(f=>f.ISBN)">
                                <span asp-validation-for="ISBN" class="text-danger"></span>        
                            </div>
                            <div class="col-sm-12 col-md-4 form-group">
                                <label asp-for="Pages" class="mb-0"></label>        
                                <input asp-for="Pages" type="text" class="form-control" placeholder="@Html.DisplayNameFor(f=>f.Pages)">
                                <span asp-validation-for="Pages" class="text-danger"></span>        
                            </div>
                            <div class="col-sm-12 col-md-4 form-group">
                                <label asp-for="YearId" class="mb-0"></label>        
                                <select asp-for="YearId" asp-items="Model.Years" class="form-control">
                                    <option value="">Select Year of Publication</option>
                                </select>
                                <span asp-validation-for="YearId" class="text-danger"></span>
                            </div>  
                        </div>                                         
                        
                        <div class="row">
                            <div class="col-sm-12 col-md-4 form-group">
                                <label asp-for="LanguageId" class="mb-0"></label>        
                                <select asp-for="LanguageId" asp-items="Model.Languages" class="form-control">
                                    <option value="">Select Language</option>
                                </select>
                                <span asp-validation-for="LanguageId" class="text-danger"></span>
                            </div>
                            <div class="col-sm-12 col-md-4 form-group">
                                <label asp-for="FormatId" class="mb-0"></label>        
                                <select asp-for="FormatId" asp-items="Model.BookFormats" class="form-control">
                                    <option value="">Select Format</option>
                                </select>
                                <span asp-validation-for="FormatId" class="text-danger"></span>
                            </div>
                            <div class="col-sm-12 col-md-4 form-group">
                                <label asp-for="SourceId" class="mb-0"></label>        
                                <select asp-for="SourceId" asp-items="Model.BookSources" class="form-control">
                                    <option value="">Select Book Source</option>
                                </select>
                                <span asp-validation-for="SourceId" class="text-danger"></span>
                            </div>
                            
                        </div>

                        <div class="row">
                            <div class="col-sm-12 form-group">
                                <label asp-for="Description" class="mb-0"></label>
                                <textarea asp-for="Description" cols="30" rows="5" class="form-control">                                    
                                </textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 px-0 py-0 pr-2 mb-2">
                <div class="card">
                    <h3 class="card-header">Sales & Conditions</h3>
                    <div class="card-block">
                        <div class="row">                    
                            <div class="col-sm-12 col-md-4 form-group">
                                <label asp-for="PriceId" class="mb-0"></label>
                                <select asp-for="PriceId" asp-items="Model.Prices" class="form-control">
                                    <option value="">Select Price</option>
                                </select>
                                <span asp-validation-for="PriceId" class="text-danger"></span>
                            </div>
                            <div class="col-sm-12 col-md-4 form-group">
                                <label asp-for="ConditionId" class="mb-0"></label>
                                <select asp-for="ConditionId" asp-items="Model.Conditions" class="form-control">
                                    <option value="">Select Book Condition</option>
                                </select>
                                <span asp-validation-for="ConditionId" class="text-danger"></span>
                            </div>
                            <div class="col-sm-12 col-md-4 form-group">
                                <label asp-for="GrantId" class="mb-0"></label>
                                <select asp-for="GrantId" asp-items="Model.Grants" class="form-control">
                                    <option value="">Select Grant</option>
                                </select>
                                <span asp-validation-for="GrantId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">                            
                            <div class="col-sm-12 col-md-4 form-group">
                                <label asp-for="CollectionModeId" class="mb-0"></label>
                                <select asp-for="CollectionModeId" asp-items="Model.CollectionModes" class="form-control">
                                    <option value="">Select Mode of Collection</option>
                                </select>
                                <span asp-validation-for="CollectionModeId" class="text-danger"></span>
                            </div>
                            <div class="col-sm-12 col-md-4 form-group">
                                <label asp-for="DaysAllowedId" class="mb-0"></label>
                                <select asp-for="DaysAllowedId" asp-items="Model.Days" class="form-control">
                                    <option value="">Select Days Allowed</option>
                                </select>
                                <span asp-validation-for="DaysAllowedId" class="text-danger"></span>
                            </div>
                            <div class="col-sm-12 col-md-4 form-group">
                                <label asp-for="FineId" class="mb-0"></label>
                                <select asp-for="FineId" asp-items="Model.Fines" class="form-control">
                                    <option value="">Select Book Fine</option>
                                </select>
                                <span asp-validation-for="FineId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-sm-12 px-0 py-0 pr-2 mb-2">
                <div class="card">
                    <h3 class="card-header">Book Location</h3>
                    <div class="card-block">
                        <div class="row">
                            <div class="col-sm-12 col-md-4 form-group">
                                <label asp-for="LocationId" class="mb-0"></label>
                                <select asp-for="LocationId" asp-items="Model.Locations" class="form-control">
                                    <option value="">Select Location</option>
                                </select>
                                <span asp-validation-for="LocationId" class="text-danger"></span>
                            </div>
                            <div class="col-sm-12 col-md-4 form-group">
                                <label asp-for="AvailabilityId" class="mb-0"></label>
                                <select asp-for="AvailabilityId" asp-items="Model.Availabilities" class="form-control">
                                    <option value="">Select Availability</option>
                                </select>
                                <span asp-validation-for="AvailabilityId" class="text-danger"></span>
                            </div>
                            <div class="col-sm-12 col-md-4 form-group">
                                <label asp-for="Quantity" class="mb-0"></label>
                                <input type="text" asp-for="Quantity" class="form-control">                                
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 px-0 py-10">
                <button class="btn btn-primary" type="submit">Save</button>
            </div>

        </div>
    </div>

    
</form>


