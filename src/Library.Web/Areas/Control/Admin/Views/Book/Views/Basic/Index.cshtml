@model BookViewModel

<div class="card card-block">
    <div class="row">
        <div class="col-sm-12 col-md-2 px-0">
            @if(Model.Cover == null || string.IsNullOrEmpty(Model.Cover.Path))
            {
                <img src="@Url.Content("~/images/icons/book-icon.png")" width="150">
            }
            else
            {
                <img src="@Url.Content(Model.Cover.Path)" width="150">
            }
        </div>
        <div class="col-sm-12 col-md-6 px-0">
            <h2 class="mb-0">@Model.Title.ToUpper()</h2>
            <small><strong>@string.Join(", ", Model.Authors.Select(a => $"{a.FirstName} {a.LastName}").ToList())</strong></small>
            <div><label>Publisher:</label> @Model.Publisher.Name</div>
            <hr>
            <a asp-action="EditBookBasic" asp-route-id="@Model.Id" class="btn btn-primary">
             <i class="fa fa-pencil"></i>   Edit
            </a>           
        </div>
    </div>
    
</div>