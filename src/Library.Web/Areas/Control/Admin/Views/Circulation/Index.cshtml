@model BookCirculationListingViewModel
<div class="row">
    <div class="col-sm-12 col-md-3">
        <form asp-action="Index" asp-controller="Circulation" method="get">         
            <div class="card">
                <h4 class="card-header">Books Circulation</h4>
                <div class="card-block">                    
                    <div class="form-group">
                        <label class="mb-0">Category</label>                        
                        <select asp-for="SearchCirculationsOptions.Status" class="form-control ">
                            <option value="">Select Option</option>
                            <option value="Borrow Initiated">Borrow Initiated</option>
                            <option value="Approved">Borrrowed</option>
                            <option value="Return Initiated">Return Initiated</option>
                            <option value="Return Confirmed">Returned</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="" class="mb-0">Start Date</label>
                        <input asp-for="SearchCirculationsOptions.StartDate" type="text" class="form-control datetimepicker">
                    </div>
                    <div class="form-group">
                        <label for="" class="mb-0">End Date</label>
                        <input asp-for="SearchCirculationsOptions.EndDate" type="text" class="form-control datetimepicker">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-sm mt-2">Search</button>
                    </div>
                </div>                
            </div>
        </form> 
    </div>

    <div class="col-sm-12 col-md-9">
        @Html.Partial("_BorrowedBookListingIndex", @Model)
    </div>
</div>

