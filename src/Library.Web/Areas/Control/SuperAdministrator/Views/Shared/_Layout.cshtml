@{
    Layout = "~/Areas/Control/Views/Shared/_Layout.cshtml";
}

@RenderSection("Styles", required: false)
@RenderSection("Scripts", required: false)
<main class="container-fluid">
    <div class="row">
            <nav class="col-sm-2 sidebar-container">
                <div class="sidebar">
                    <ul class="sidebar-nav">
                        <li><a asp-action="Index" asp-controller="Dashboard"><span class="sidebar-icon"><i class="fa fa-bank"></i></span><span class="sidebar-title">Dashboard</span></a></li>
                        <li><a asp-action="Index" asp-controller="Account" asp-area="Admin"><span class="sidebar-icon"><i class="fa fa-bank"></i></span><span class="sidebar-title">Accounts</span></a></li>                        
                    </ul>
                </div>
            </nav>
            <div class="col-sm-10 offset-sm-2 col-md-10 offset-md-2 page-content-container">
                 @RenderBody()
            </div>
    </div>
</main>


