@inject IOptions<SitePageSettingsViewModel> SitePageSetting
@{
    var pageSettings = SitePageSetting.Value;
    ViewData["Title"] = pageSettings.ApplicationTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" /> 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.4/build/jquery.datetimepicker.min.css" />  
    <style>
        .footer {

            position: fixed;
            bottom: 0;
            width: 100%;
            /* Set the fixed height of the footer here */
            height: 60px;
            line-height: 60px; /* Vertically center the text there */
            background-color: #f5f5f5;
            margin-top:10px !important;
        }
    </style>
    @RenderSection("Styles", required: false)
}
<header>
    <nav class="navbar navbar-toggleable-md navbar-inverse fixed-top bg-inverse">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="#">@pageSettings.ApplicationTitle</a>
      <div class="collapse navbar-collapse" id="navbarCollapse">        
        @await Html.PartialAsync("_LoginPartial")
      </div>
    </nav>
</header>

@RenderBody()
<br><br><br><br>
<footer class="footer">
    <div class="container">
    <span class="text-muted">@Html.Raw(pageSettings.CopyrightDescription.Replace("{year}", @DateTime.Now.Year.ToString()))</span>
    </div>
</footer>

@section Scripts{
    <script src="~/lib/select2/dist/js/select2.min.js"></script>
    @RenderSection("Scripts", required: false)
}

