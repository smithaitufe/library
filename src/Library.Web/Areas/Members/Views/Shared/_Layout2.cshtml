<!DOCTYPE html>
<html id="member-section">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Librille</title>
    @{ await Html.RenderPartialAsync("_CssLinks"); }
    @RenderSection("Styles", required: false)
    
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-sm-2 col-md-2 px-0" id="sidebar-container">
                <ul class="sidebar-nav">
                    <li>
                        <div class="brand"><h2>Librille</h2></div>
                    </li>
                    <li><a class="nav-link" asp-action="Index" asp-controller="Dashboard">
                        <span class="sidebar-icon"><i class="fa fa-bank"></i></span>
                        <span class="sidebar-title">Dashboard</span></a>
                    </li>
                    <li><a class="nav-link" asp-action="Index" asp-controller="Book">
                        <span class="sidebar-icon"><i class="fa fa-book"></i></span>
                        <span class="sidebar-title">Books</span></a>
                    </li>
                    <li><a class="nav-link" asp-action="Index" asp-controller="Post">
                        <span class="sidebar-icon"><i class="fa fa-commenting"></i></span>
                        <span class="sidebar-title">Threads</span></a>
                    </li>
                    <li><a class="nav-link" asp-action="Index" asp-controller="Club">
                        <span class="sidebar-icon"><i class="fa fa-book"></i></span>
                        <span class="sidebar-title">Clubs</span></a>
                    </li>
                    <li><a class="nav-link" asp-action="Index" asp-controller="Dashboard">
                        <span class="sidebar-icon"><i class="fa fa-user-o"></i></span>
                        <span class="sidebar-title">Profile</span></a>
                    </li>
                    <li><a class="nav-link" asp-action="Index" asp-controller="Dashboard">
                        <span class="sidebar-icon"><i class="fa fa-address-book-o"></i></span>
                        <span class="sidebar-title">Account</span></a>
                    </li>
                         <li><a class="nav-link" asp-action="Index" asp-controller="Dashboard">
                        <span class="sidebar-icon"><i class="fa fa-cog"></i></span>
                        <span class="sidebar-title">Settings</span></a>
                    </li>
                        <li><a class="nav-link" asp-action="Logout" asp-controller="Session" asp-area="">
                        <span class="sidebar-icon"><i class="fa fa-sign-out"></i></span>
                        <span class="sidebar-title">Log out</span></a>
                    </li>
                </ul>
            </nav>
            <main class="col-sm-10 offset-sm-2 col-md-10 offset-md-2 px-0">
                <nav class="navbar navbar-toggleable-sm">
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown">
                                    <a class="nav-link" data-toggle="dropdown">
                                        <span class="navbar-nav-icon"><i class="fa fa-user"></i></span>
                                        <span class="navbar-item">Welcome Smith</span>
                                        <span class="navbar-nav-icon"><i class="fa fa-caret-down"></i></span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li class="dropdown-item">
                                            <a href="">
                                                <span class="navbar-nav-icon"><i class="fa fa-user"></i></span>
                                                <span>My Profile</span>
                                            </a>
                                        </li>
                                        <li class="dropdown-item">
                                            <a href="">
                                                <span class="navbar-nav-icon"><i class="fa fa-sign-out"></i></span>
                                                <span>Log Out</span>
                                            </a>
                                        </li>
                                    </ul>
                                </li>                                
                            </ul>
                            <ul class="navbar-nav ml-auto">                                
                                <li class="nav-item">
                                    <a class="nav-link" href="#">
                                        <span class="navbar-nav-icon"><i class="fa fa-cloud"></i></span>
                                        <span class="navbar-nav-title">Notifications</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                     <a class="nav-link" href="#">
                                        <span class="navbar-nav-icon"><i class="fa fa-users"></i></span>
                                        <span class="navbar-nav-title">Reading Club</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                     <a class="nav-link" href="#">
                                        <span class="navbar-nav-icon"><i class="fa fa-envelope"></i></span>
                                        <span class="navbar-nav-title">Messages</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                     <a class="nav-link" href="#">
                                        <span class="navbar-nav-icon"><i class="fa fa-eye"></i></span>
                                        <span class="navbar-nav-title">Watchlist</span>
                                    </a>
                                </li>

                            </ul>
                        </nav>
                    
                
               <div class="container-fluid">
                    @RenderBody()
               </div>
               <!--<footer style="position: fixed; bottom: 0; width: 100%; background-color: #81d4fa">
                   <div class="container-fluid">
                        &copy; @DateTime.Now.Year
                   </div>
               </footer>-->
            </main>
        </div>
    </div>

    @{ await Html.RenderPartialAsync("_Scripts"); }
    @RenderSection("Scripts", required: false)
</body>
</html>
