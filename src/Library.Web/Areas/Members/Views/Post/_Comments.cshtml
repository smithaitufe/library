@model PostViewModel

<div class="reply-post-thread">
    <div class="row">
        <div class="col-sm-12">
            <span class="post-reply float-right" data-pid="@Model.Id"><i class="fa fa-reply"></i></span>
        </div>
    </div>
</div>

<div class="content-container shadowed">    
    @foreach(var comment in Model.Comments) {
        <div class="comments">
            <div class="row">
                <div class="col-sm-2 commenter">
                    <span class="commenter-user-icon"><i class="fa fa-user"></i></span>
                    <span class="commenter-name">@comment.Commenter.LastName @comment.Commenter.FirstName</span>
                </div>
                <div class="col-sm-10 comment-date">
                    @comment.InsertedAt.ToString("dd MMMM, yyyy hh:mm tt")
                    <span class="post-reply float-right" data-cid="@comment.Id" data-pid="@Model.Id"><i class="fa fa-reply"></i></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 commenter-photo-container">                
                    <img src="~/images/logo.png" alt="" width="90px" height="70" style="border: 1px solid #ddd; min-height: 70px; min-width: 90px">
                    <div>Member (@comment.Commenter.InsertedAt.ToString("yyyy"))</div>                    
                </div>
                <div class="col-sm-10 comment">
                    @Html.Raw(@comment.Text)
                </div>
            </div>
        </div>
    }
</div>

@Html.Partial("_PostComment", @Model.CommentForm)